   "source": [
    "i=0\n",
    "sum=0\n",
    "while True:\n",
    "    a=int(input(\"点数を入力してください：\"))\n",
    "    if a==-1:\n",
    "        break\n",
    "    i+=1\n",
    "    sum+=a\n",
    "average=round(sum/i,1)\n",
    "print(f\"{i}人のテストの平均点は{average}点です。\")   "
   ]
  }
